generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @default(uuid()) @unique @id
  email String  @unique
  name  String?
}

model Quiz {
  id  String @default(uuid()) @unique @id
  name String
  questions Question[]
}

model Question {
  id  String @default(uuid()) @unique @id
  question_text String
  quiz Quiz @relation(fields: [quizId], references: [id])
  quizId String
}

model Option {
  id  String @default(uuid()) @unique @id
  option_text String
}

model Response {
  id  String @default(uuid()) @unique @id
}

model Result {
  id  String @default(uuid()) @unique @id
}

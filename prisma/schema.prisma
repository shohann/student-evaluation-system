generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @default(uuid()) @unique @id
  email String  @unique
  name  String?
}

model Quiz {
  id  String @default(uuid()) @unique @id
}

model Question {
  id  String @default(uuid()) @unique @id
}

model Option {
  id  String @default(uuid()) @unique @id
}

model Response {
  id  String @default(uuid()) @unique @id
}

model Result {
  id  String @default(uuid()) @unique @id
}
